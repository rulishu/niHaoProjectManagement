[
  {
    "path": "/login",
    "component": "@/layouts/UserLayout"
  },
  {
    "path": "/",
    "component": "@/layouts/BasicLayout",
    "routes": [
      {
        "index": true,
        "redirect": "/milestone"
      },
      {
        "path": "/milestone",
        "name": "里程碑",
        "component": "@/pages/Milestone",
        "isAuth": true
      },
      {
        "path": "/milestone",
        "name": "里程碑",
        "isAuth": true,
        "hideInMenu": true,
        "navigate": "(navigate) => {navigate(`/milestone/${sessionStorage.getItem('id')}`)}",
        "routes": [
          {
            "path": "/milestone/newMilestone",
            "name": "新增里程碑",
            "component": "@/pages/Milestone/NewMilestone",
            "isAuth": true,
            "navigate": "(navigate) => {navigate(`/milestone/newMilestone/${sessionStorage.getItem('id')}`)}"
          },
          {
            "path": "/milestone/editMilestone",
            "name": "编辑里程碑",
            "component": "@/pages/Milestone/NewMilestone",
            "isAuth": true,
            "navigate": "(navigate) => {navigate(`/milestone/newMilestone/${sessionStorage.getItem('id')}`)}"
          },
          {
            "path": "/milestone/milestoneInfo",
            "name": "里程碑详情",
            "component": "@/pages/Milestone/MilestoneInfo",
            "isAuth": true,
            "navigate": "(navigate) => {navigate(`/milestone/milestoneInfo/${sessionStorage.getItem('id')}`)}"
          }
        ]
      },
      {
        "path": "/403",
        "name": "403",
        "hideInMenu": true,
        "component": "403"
      },
      {
        "path": "/500",
        "name": "500",
        "hideInMenu": true,
        "component": "500"
      },
      {
        "path": "/404",
        "name": "404",
        "hideInMenu": true,
        "component": "404"
      },
      {
        "path": "*",
        "name": "404",
        "component": "404"
      }
    ]
  }
]
